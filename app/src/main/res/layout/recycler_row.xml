<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:ignore="ExtraText"
    android:layout_margin="1dp">


    <TextView
        android:id="@+id/symbolRow"
        android:textStyle="bold"
        android:layout_width="200dp"
        android:layout_height="32dp"
        android:layout_marginStart="12dp"
        android:textColor="#3f3f3f"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nameRow"
        android:layout_width="200dp"
        android:layout_height="29dp"
        android:layout_marginStart="12dp"
        android:textColor="#3f3f3f"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/symbolRow" />

    <TextView
        android:id="@+id/priceRow"
        android:layout_width="220dp"
        android:layout_height="26dp"
        android:layout_marginLeft="12dp"
        android:textColor="#3f3f3f"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameRow" />

    <TextView
        android:id="@+id/perRow"
        android:layout_width="77dp"
        android:layout_height="30dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="12dp"
        android:textColor="#3f3f3f"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toEndOf="@+id/chartStatus"
        app:layout_constraintTop_toBottomOf="@+id/priceRow" />

    <ImageView
        android:id="@+id/chartStatus"
        android:layout_width="62dp"
        android:layout_height="39dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.269"
        app:layout_constraintStart_toEndOf="@+id/priceRow"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.913"
        app:srcCompat="@drawable/profits" />

</androidx.constraintlayout.widget.ConstraintLayout>